				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Store the accessToken and refreshToken in environment variables\r",
									"if (pm.response.code === 200) {\r",
									"    const responseJson = pm.response.json();\r",
									"    \r",
									"    if (responseJson.status === 'success' && responseJson.data) {\r",
									"        // Store the access token\r",
									"        pm.environment.set(\"accessToken\", responseJson.data.accessToken);\r",
									"        \r",
									"        // Store the refresh token\r",
									"        pm.environment.set(\"refreshToken\", responseJson.data.refreshToken);\r",
									"        \r",
									"        // Store user info (optional)\r",
									"        pm.environment.set(\"userId\", responseJson.data.user._id);\r",
									"        pm.environment.set(\"userEmail\", responseJson.data.user.email);\r",
									"        \r",
									"        console.log(\"‚úÖ Tokens stored in environment!\");\r",
									"        console.log(\"Access Token: \" + responseJson.data.accessToken.substring(0, 20) + \"...\");\r",
									"    }\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
